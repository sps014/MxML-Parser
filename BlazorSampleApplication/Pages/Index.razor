@page "/"
@using mx;



    <mx.TitleWindow title="PACS Login [IN CONFIDENCE]" showCloseButton="false"
                    layout="absolute"
                    height="402"
                    width="370"
                    styleName="Canvas"
                    fontSize="11"
                    automationName="ComponentLoginScreen"
                    horizontalAlign="center"
                    verticalAlign="middle">
        <mx.Label id="userLabel" text="username"
                  x="29" color="brown"
                  y="67"
                  automationName="lblUserName" />
        <mx.TextInput id="login" maxChars="25"  text=""
                      x="121" 
                      y="65"
                      styleName="TextInput"
                      automationName="txtUserName" />
        <mx.Label id="passwordLabel" text="password"
                  x="29" color="brown"
                  y="107"
                  automationName="lblPassword" />
        <mx.TextInput id="password" displayAsPassword="true" maxChars="25"  text=""
                      x="121"
                      y="105"
                      styleName="TextInput"
                      automationName="txtPassword" />

        <mx.ControlBar horizontalAlign="right">
            <mx.Button id="okButton" label="Login"
                       x="87"
                       y="160"
                       styleName="Button"
                       automationName="btnLogin"
                       color="red"/>
        </mx.ControlBar>
    </mx.TitleWindow>