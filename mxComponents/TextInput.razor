<input type="text"
       class="form-control" placeholder="input" @bind-value="text" style="position:absolute;left:@(x)px;top:@(y)px;max-width:@(maxWidth)px;" id="@id" maxlength="@maxChars" />

@code
{
    [Parameter]
    public string text { get; set; }
    [Parameter]
    public string id { get; set; }
    [Parameter]
    public int maxChars { get; set; }
    [Parameter]
    public int x { get; set; }
    [Parameter]
    public int y { get; set; }
    [Parameter]
    public string styleName { get; set; }
    [Parameter]
    public string automationName { get; set; }
    [Parameter]
    public string style { get; set; }
    [Parameter]
    public string displayAsPassword { get; set; }
    [Parameter]
    public int maxWidth { get; set; }
    [Parameter]
    public EventCallback enter { get; set; }
}